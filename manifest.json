{
  "manifest_version": 2,
  "name": "Text-to-Speech Extension",
  "version": "1.0",
  "description": "A simple text-to-speech Chrome extension.",
  "permissions": ["activeTab"],
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "web_accessible_resources": ["popup.css"]
}
